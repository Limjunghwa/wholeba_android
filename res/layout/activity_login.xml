<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/join_bg01"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.banana.banana.login.LoginActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="@string/findpassword"
        android:textColor="#6a3906"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_login_ok"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="124dp"
        android:background="@drawable/login_bt02"
        android:height="40dp"
        android:text="ok"
        android:textSize="13sp"
        android:width="230dp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="230dp"
        android:layout_height="38dp"
        android:layout_above="@+id/btn_login_ok"
        android:layout_alignLeft="@+id/edit_userid"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_memo"
        android:ems="10"
        android:height="100dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#6a3906" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edit_userid"
        android:layout_width="230dp"
        android:layout_height="38dp"
        android:layout_above="@+id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/login_memo"
        android:ems="10"
        android:hint="Email"
        android:paddingLeft="10dp"
        android:textColorHint="#6a3906" />

    <ImageView
        android:id="@+id/love_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_userid"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/login_name" />

</RelativeLayout>
