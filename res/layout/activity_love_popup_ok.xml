<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.banana.banana.love.LovePopupOk" >

    <ImageView
        android:id="@+id/love_progressBar"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="214dp"
        android:src="@drawable/popup_lip" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/love_progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="서로의 폰을 마주보고 뽀뽀"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="뽀뽀가 완료된 후 사랑이 기록 됩니다."
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="22dp"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="17dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/popup_bt_x" />

</RelativeLayout>
