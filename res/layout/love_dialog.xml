<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffde5"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <RadioGroup
        android:id="@+id/RadioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_nocondom"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginRight="7dp"
            android:button="@drawable/loveimgselector2"
            android:clickable="true" />

        <RadioButton
            android:id="@+id/radio_condom"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginLeft="7dp"
            android:button="@drawable/loveimgselector"
            android:checked="false"
            android:clickable="true" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" 
        android:layout_marginTop="50dp" 
        android:text="피임기구 사용여부를 선택하세요"
        android:textColor="#693906" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="186dp"
        android:layout_height="28dp"
        android:layout_below="@+id/RadioGroup1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/love_plus_day_bar" >

        <EditText
            android:id="@+id/edit_love_year"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/text_love_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="년"
            android:textColor="#6a3906"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_love_month"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:ems="10" />

        <TextView
            android:id="@+id/text_love_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="월"
            android:textColor="#6a3906"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_love_day"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:ems="10" />

        <TextView
            android:id="@+id/text_love_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일"
            android:textColor="#6a3906"
            android:textSize="20sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="12dp"
        android:background="#fffde5" >

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_marginLeft="80dp"
            android:background="#fffde5"
            android:text="Delete"
            android:textColor="#6a3906" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
            android:background="#fffde5"
            android:text="ok"
            android:textColor="#6a3906" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ffe100" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="125dp"
            android:text="기념일 추가"
            android:textColor="#6a3906"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>