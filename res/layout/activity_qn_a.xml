<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_q_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.banana.banana.setting.QnAActivity" >

    <EditText
        android:id="@+id/edit_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_qna"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/edit_qna"
        android:background="#ffffff"
        android:ems="10"
        android:hint="제목을 입력해 주세요"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btn_qna_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_qna"
        android:layout_marginTop="30dp"
        android:background="@drawable/set_q_bt_ok"
        android:text="보내기" />

    <EditText
        android:id="@+id/edit_qna"
        android:layout_width="298dp"
        android:layout_height="148dp"
        android:layout_below="@+id/edit_subject"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="내용을 입력해 주세요" />

</RelativeLayout>
