<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffde5"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="58dp"
        android:text="Title"
        android:textColor="#6a3906"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_dday_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_title"
        android:layout_alignBottom="@+id/text_title"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="70dp"
        android:background="#fffde5"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="EX)바나 생일"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_title"
        android:layout_marginTop="110dp"
        android:background="#fffde5" >

        <Button
            android:id="@+id/btn_dday_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_marginLeft="80dp"
            android:background="#fffde5"
            android:text="Delete"
            android:textColor="#6a3906" />

        <Button
            android:id="@+id/btn_dday_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
            android:background="#fffde5"
            android:text="ok"
            android:textColor="#6a3906" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="186dp"
        android:layout_height="28dp"
        android:layout_alignLeft="@+id/text_title"
        android:layout_alignRight="@+id/edit_dday_name"
        android:layout_below="@+id/edit_dday_name"
        android:layout_marginTop="37dp"
        android:background="@drawable/love_plus_day_bar" >

        <EditText
            android:id="@+id/edit_dday_year"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.14"
            android:background="#ffffffff"
            android:ems="10" />

        <TextView
            android:id="@+id/text_dday_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="년"
            android:textColor="#6a3906"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_dday_month"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:ems="10" />

        <TextView
            android:id="@+id/text_dday_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="월"
            android:textColor="#6a3906"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_dday_day"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:ems="10" />

        <TextView
            android:id="@+id/text_dday_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일"
            android:textColor="#6a3906"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffe100" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="125dp"
            android:text="기념일 추가"
            android:textColor="#6a3906"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>
