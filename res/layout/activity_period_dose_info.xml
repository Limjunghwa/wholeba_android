<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    tools:context="com.banana.banana.signup.PeriodDoseInfoActivity" > 

    <TextView
        android:id="@+id/useText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="176dp"
        android:text="피임약 복용"
        android:textColor="#6a3906"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/useText"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_yes"
            style="@style/RadioButtonStyle"
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:layout_marginLeft="23dp"
            android:background="@drawable/join_bt031"
            android:checked="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="YES"
            android:textColor="#ffffffff"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/radio_no"
            style="@style/RadioButtonStyle2"
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="23dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="NO"
            android:textColor="#ffffffff" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        android:text="&quot;Ms.나나가 피임약 복용을 \n관리할수있도록 도와줄거에요.&quot;"
        android:textColor="#6a3906"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="256dp"
        android:layout_height="30dp"
        android:layout_below="@id/radioGroup1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" 
        android:background="@drawable/love_plus_day_bar"
        android:visibility="gone" > 
        <TextView
            android:id="@+id/text_start"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="시작일"
            android:textColor="#6a3906"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/edit_period_start_year"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/text_period_start_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="년"
            android:textColor="#6a3906"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/edit_period_start_month"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:ems="10" />

        <TextView
            android:id="@+id/text_period_start_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="월"
            android:textColor="#6a3906"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/edit_period_start_day"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:ems="10" />

        <TextView
            android:id="@+id/text_period_start_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일"
            android:textColor="#6a3906"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="256dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="0dp" 
        android:background="@drawable/love_plus_day_bar"
        android:visibility="gone" > 

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#ffff00"
            android:textOff="PM"
            android:textOn="AM" />

        <EditText
            android:id="@+id/EditText02"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:ems="10" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시"
            android:textColor="#6a3906"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/EditText01"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:ems="10" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="분"
            android:textColor="#6a3906"
            android:textSize="13sp" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#6a3906"
            android:text="ToggleButton"
            android:textColor="#ffffffff"
            android:textOff="　"
            android:textOn="반복" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/join_bt02" />

    <Button
        android:id="@+id/btn_before"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/join_bt03" />

</RelativeLayout>